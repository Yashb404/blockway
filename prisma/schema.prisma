generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String    @id  @default(uuid())  
  username        String
  sub             String    @default("")
  name            String?
  profilePicture  String?
  password        String?
  solWalletId     String?
  solWallet       SolWallet?
  inrWalletId     String?
  inrWallet       InrWallet?
  provider        Provider
  transactions    Transaction[]
}

model InrWallet {
  id          String    @id  @default(uuid())  
  balance     Int       
  userId      String    @unique
  user        User      @relation(fields: [userId], references: [id])
}

model SolWallet {
  id          String   @id  @default(uuid())
  publicKey   String
  privateKey  String
  balance     Float    @default(0)
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
}

model Transaction {
  id        String   @id @default(uuid())
  status    TxStatus
  type      TxType
  amount    Int      
  timestamp DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

enum TxStatus {
  Processing
  Success
  Failure
}

enum TxType {
  Deposit
  Withdraw
  Swap
}

enum Provider {
  Google
}